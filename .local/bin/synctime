#!/bin/sh

select_timezone() {
	local initial_path="/usr/share/zoneinfo"
	local tz_selection=$initial_path

	while [ -d "$tz_selection" ]; do
		local selection=$(find "$tz_selection" -mindepth 1 -maxdepth 1 | sed "s|^$initial_path/||" | dmenu -i -l 20 -p "Select Time Zone:") || exit 1
		tz_selection="$initial_path/$selection"
	done

	echo "${tz_selection#$initial_path/}"
}

sudo ln -sf /usr/share/zoneinfo/$current_zone /etc/localtime || exit 1
sudo hwclock --systohc

echo "Current timezone: $current_zone"
date

pkill -RTMIN+1 ${STATUSBAR:-dwmblocks}
