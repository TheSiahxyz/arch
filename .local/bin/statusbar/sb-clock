#!/bin/sh

clock=$(date '+%I')
calendar="ğŸ—“ï¸"
case "$clock" in
"00") icon="ğŸ•›" ;;
"01") icon="ğŸ•" ;;
"02") icon="ğŸ•‘" ;;
"03") icon="ğŸ•’" ;;
"04") icon="ğŸ•“" ;;
"05") icon="ğŸ•”" ;;
"06") icon="ğŸ••" ;;
"07") icon="ğŸ•–" ;;
"08") icon="ğŸ•—" ;;
"09") icon="ğŸ•˜" ;;
"10") icon="ğŸ•™" ;;
"11") icon="ğŸ•š" ;;
"12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
1)
	seoul=$(TZ='Asia/Seoul' date "+%D %a %I:%M%p")
	notify-send "This Month" "$(cal | sed "s/\<$(date +'%B'|sed 's/ //g')\>/<b><span color='blue'>&<\/span><\/b>/;s/\<$(date +'%Y'|sed 's/ //g')\>/<b><span color='blue'>&<\/span><\/b>/;s/\<$(date +'%B'|sed 's/ //g')\>/<b><span color='blue'>&<\/span><\/b>/;s/\<$(date +'%e'|sed 's/ //g')\>/<b><span color='red'>&<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" && notify-send "Seoul Time" "$seoul"
	;;
2) setsid -f "$TERMINAL" -e calcurse ;;
3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Left click also displays the current time in Seoul, Korea
- Middle click opens calcurse if installed" ;;
6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+$calendar%a,%D $icon%I:%M%p"
